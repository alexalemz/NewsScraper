<style>
  .comment {
    border: 1px solid black;
    margin: 5px 0;
    padding: 5px 10px;
  }

  .comment-time {
    font-size: .8em;
    color: gray;
  }

  .comment-text {
  }

  .delete-comment {
    visibility: hidden;
  }
  .comment:hover .delete-comment {
    visibility: visible;
  }

  #comment-body {
    width: 500px;
    height: 100px;
  }

  #comments-display {
    margin-top: 20px;
  }
</style>

<div style="margin: 40px 0 20px">
  <a href="/">Back to the main page...</a>
</div>

<div class="card">
  <div class="card-header">
    <a href="{{link}}">
      <h5 class="card-title">{{title}}</h5>
    </a>
  </div>
  <div class="card-body">
    <p class="card-text">{{summary}}</p>
  </div>
</div>

<div>
  <br>
  <h5>Comments</h5>
  <form id="add-comment" data-url="/articles/{{_id}}">
    <textarea id="comment-body" placeholder="Add a comment..."></textarea> <br>
    <input type="submit" value="Submit" class="btn">
  </form>
</div>

<div id="comments-display">
{{#each comments}}
<div class="comment">
  <div class="row">
    <div class="col-11">
      <p class="comment-text">{{body}}</p>
      <p class="comment-time">{{createdAt}}</p>
    </div>
    <div class="col-1">
      <button data-id={{this._id}} class="delete-comment btn btn-danger">X</button>
    </div>
  </div>
</div>
{{/each}}
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
<script src="/js/article.js"></script>